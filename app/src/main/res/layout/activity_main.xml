<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">



    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/youtube_logo"
            android:contentDescription="YouTube Logo"
            android:adjustViewBounds="true"
            android:clickable="true"
            >
        </ImageView>
            <TextView
                style="@style/textView_30"
                android:textSize="@dimen/_10sdp"
                android:text="YouTube Clone"
                android:layout_marginTop="@dimen/_12sdp"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:src="@drawable/video_icon"
                android:contentDescription="YouTube Logo"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="@dimen/_200sdp">

            </ImageView>


            <TextView
                android:id="@+id/videoName"
                style="@style/textView_30"
                android:text="NEVER GONNA GIVE YOU UP! | RICK ASTLEY"
                android:layout_margin="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textSize="14sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp">
            <TextView
                style="@style/textView_15"
                android:id="@+id/chanelName"
                android:text="Rick Astley" />

            <TextView
                style="@style/textView_15"
                android:id="@+id/videoViews"
                android:text="172 crores"/>
            <TextView
                style="@style/textView_15"
                android:id="@+id/videoTime"
                android:text="16 years ago" />
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</ScrollView>